<?xml version="1.0" encoding="UTF-8"?>
<server description="SistemaRestaurante">

    <!-- Enable features -->
    <featureManager>
        <feature>jakartaee-10.0</feature>
    </featureManager>

    <basicRegistry id="basic" realm="BasicRealm">
        <user name="admin" password="admin123"/>
        <user name="dev" password="dev1234"/>
    </basicRegistry>

    <library id="primefaces-library">
        <file name="${server.config.dir}/primefaces-15.0.8-jakarta.jar"/>
    </library>


    <library id="postgres-library">
        <file name="${server.config.dir}/postgresql-42.7.7.jar"/>
    </library>
    <jdbcDriver id="postgres-driver" libraryRef="postgres-library" />

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9082" httpsPort="9445" />

    <dataSource id="DefaultDataSource"
                jndiName="jdbc/pgdb"
                jdbcDriverRef="postgres-driver"
                type="javax.sql.ConnectionPoolDataSource"
                transactional="true">

        <properties serverName="localhost"
                    databaseName="ferreteria_final"
                    portNumber="5432"
                    user="postgres"
                    password="abc123"/>
    </dataSource>


    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- Default SSL configuration enables trust for default certificates from the Java runtime -->
    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />

</server>
